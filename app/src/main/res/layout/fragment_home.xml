<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_v1"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Home$PlaceholderFragment">

    <mi.ur.de.dasilvaapp.TextViews.DaSilvaAppTitleTextView
        android:id="@+id/next_event_day_home"
        style="@style/headline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:text="@string/event_day_today" />

    <ImageView
        android:id="@+id/flyer_next_event_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/next_event_title_home"
        android:layout_below="@+id/next_event_day_home"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:contentDescription="@string/flyer_next_event_content_description"
        android:src="@drawable/dienstag_neu" />

    <TextView
        android:id="@+id/event_status_home"
        style="@style/closed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/weekday_today_home"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:text="@string/event_status_closed" />

    <TextView
        android:id="@+id/today_home"
        style="@style/body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/event_status_home"
        android:layout_alignLeft="@+id/flyer_next_event_home"
        android:layout_marginLeft="30dp"
        android:gravity="center"
        android:text="@string/today" />

    <TextView
        android:id="@+id/weekday_today_home"
        style="@style/body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/event_status_home"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="16dp"
        android:layout_toRightOf="@+id/today_home"
        android:gravity="center"
        android:text="@string/weekday_today" />

    <TextView
        android:id="@+id/date_today_home"
        style="@style/body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/event_status_home"
        android:layout_toRightOf="@+id/weekday_today_home"
        android:gravity="center"
        android:text="@string/date_today" />

    <mi.ur.de.dasilvaapp.TextViews.DaSilvaAppTitleTextView
        android:id="@+id/next_event_title_home"
        style="@style/headline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/date_today_home"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="@string/event_title" />

</RelativeLayout>
