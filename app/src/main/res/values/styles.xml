<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:homeAsUpIndicator">@drawable/ic_drawer</item>
    </style>

    <style name="headline">
        <item name="android:textSize">@dimen/headline_font_size</item>
        <item name="android:textColor">@color/text_color_primary</item>
        <item name="android:layout_margin">@dimen/margin_fragment_headline_top_bottom</item>
    </style>

    <style name="image_caption" parent="headline">
        <item name="android:textSize">@dimen/caption_font_size</item>
    </style>

    <style name="navigation_drawer" parent="image_caption">
        <item name="android:textColor">@color/da_silva_background</item>
    </style>

    <style name="subhead">
        <item name="android:textSize">@dimen/subhead_font_size</item>
        <item name="android:textColor">@color/text_color_primary</item>
    </style>

    <style name="sub_subhead" parent="subhead">
        <item name="android:textSize">@dimen/sub_subhead_font_size</item>
    </style>

    <style name="body">
        <item name="android:textSize">@dimen/body_font_size</item>
        <item name="android:textColor">@color/text_color_primary</item>
    </style>

    <style name="hint" parent="body">
        <item name="android:textColor">@color/text_color_primary</item>
        <item name="android:textColorHint">@color/text_color_hint</item>
    </style>

    <style name="spinner_item" parent="body">
        <item name="android:background">@color/da_silva_background</item>
    </style>

    <style name="body_custom_font" parent="body">
        <item name="android:textSize">@dimen/body_font_size_custom_font</item>
    </style>

    <style name="decent">
        <item name="android:textSize">@dimen/decent_font_size</item>
        <item name="android:textColor">@color/text_color_primary</item>
    </style>

    <style name="closed" parent="body">
        <item name="android:textColor">@color/text_color_closed</item>
    </style>

    <style name="open_in" parent="body">
        <item name="android:textColor">@color/text_color_open_in</item>
    </style>

    <style name="open" parent="body">
        <item name="android:textColor">@color/text_color_open</item>
    </style>

    <style name="news_feed_item_divider">
        <item name="android:color">@color/text_color_primary</item>
        <item name="android:background">?android:attr/listDivider</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/news_feed_item_divider_height</item>
    </style>

</resources>
