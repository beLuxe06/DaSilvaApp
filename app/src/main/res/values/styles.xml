<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:homeAsUpIndicator">@drawable/ic_drawer</item>
    </style>

    <style name="headline">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/text_color_primary</item>
    </style>

    <style name="title">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/text_color_primary</item>
    </style>

    <style name="subhead">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_color_primary</item>
    </style>

    <style name="closed" parent="subhead">
        <item name="android:textColor">@color/text_color_closed</item>
    </style>

    <style name="open_in" parent="subhead">
        <item name="android:textColor">@color/text_color_open_in</item>
    </style>

    <style name="open" parent="subhead">
        <item name="android:textColor">@color/text_color_open</item>
    </style>

    <style name="body1">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/text_color_primary</item>
    </style>

    <style name="body2">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_color_primary</item>
    </style>

    <style name="param">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/text_color_primary</item>
    </style>

</resources>
